{
  "metadata": {
    "title": "{postTitle} - GameSite Blog",
    "description": "{postExcerpt}",
    "keywords": ["{postTitle}", "{postCategory}", "blog", "gaming articles"]
  },
  "page": {
    "title": "{postTitle}",
    "showBreadcrumb": true
  },
  "sections": {
